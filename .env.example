# Environment Variables Template
# Copy this file to .env and customize the values

# GitHub Configuration for FluxCD
export GITHUB_TOKEN="your-github-personal-access-token"
export GITHUB_OWNER="owner-of-the-repo"  # Your GitHub owner (username or organization)
export GITHUB_REPO="poc-capi-aks"
export GITHUB_BRANCH="main"

# Azure Configuration (optional overrides)
# These will be read from Terraform outputs if not set
export AZURE_SUBSCRIPTION_ID="your-subscription-id"
export AZURE_TENANT_ID="your-tenant-id"

# Azure Client ID and Secret (optional, if using service principal)
# export AZURE_CLIENT_ID="your-client-id"
# export AZURE_CLIENT_SECRET="your-client-secret"

# Azure AD Admin Group (optional)
# export AZURE_ADMIN_GROUP_ID="your-admin-group-object-id"

# Cluster Configuration (optional overrides)
export CLUSTER_NAME="aks-workload-cluster"
export RESOURCE_GROUP_NAME="aks-cluster-rg"
export LOCATION="eastus"

# Kind CAPI & CAPZ Management Variables
export CLUSTER_NAME="capi-management"
export CAPI_VERSION="v1.11.1"
export CAPZ_VERSION="v1.21.0"

# Instructions:
# 1. Fill in GITHUB_TOKEN with a Personal Access Token from GitHub
# 2. Fill in GITHUB_OWNER with your GitHub username or organization
# 3. Optionally modify other settings as needed
# 4. Run: source .env
